    "build": "npm install --prefix client && npm run build --prefix client && node scripts/render-postbuild.js",
    "lint": "eslint . && npm run lint --prefix client",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "test": "jest"
  },
